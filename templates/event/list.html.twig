<!DOCTYPE html>
<html>
<head>
    <title>Liste des événements</title>
</head>
<body>
    <h1>Liste des événements</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.date|date('d-m-Y') }}</td>
                    <td>{{ event.location }}</td>
                    <td>
                        <a href="{{ path('view_event', { id: event.id }) }}">Voir l'événement</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun événement disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
