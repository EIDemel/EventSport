{# templates/event/view.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement{% endblock %}

{% block body %}
    <h1>{{ event.name }}</h1>
    <p>Date : {{ event.date|date('d/m/Y') }}</p>
    <p>Lieu : {{ event.location }}</p>
    
    <h2>Participants</h2>
    <ul>
        {% for participant in event.participants %}
            <li>{{ participant.name }} ({{ participant.email }})</li>
        {% else %}
            <li>Aucun participant pour cet événement.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('add_participant', { eventId: event.id }) }}" class="btn btn-primary">
        Ajouter un participant
    </a>
{% endblock %}
