{% extends 'base.html.twig' %}

{% block title %}Ajouter un participant{% endblock %}

{% block body %}
    <h1>Ajouter un participant à l'événement {{ event.name }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        <button type="submit">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
